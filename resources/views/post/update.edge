<body>
  <main>
    @if(!auth.user)
      
      <div class="mainContent">
        <h1>You need to <a href="{{route('auth.login')}}">Login</a> to your account</h1> 
      </div>
    @endif

    @if(auth.user)

    <a href="{{route('auth.post.show')}}">Back to posts</a>

      <div class="mainContent">
        <h1>Welcome to Your Page</h1> 
        <div>
          <form action="{{ route("auth.update", [post.id]) }}?_method=PATCH" method="POST">
            <input type="hidden" name="uid" value="{{post.id}}">
            <input type="text" name="title" placeholder="Your title" value="{{post.email}}">
            <textarea name="msg">{{post.body}}</textarea>
            <button type="submit">Post</button>
          </form>
        </div>
        
      </div>
      @endif
      
  </main>

</body>
</html>
